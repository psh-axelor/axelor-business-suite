<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">
	
	<form name="wizard-customer-form" title="My space" model="com.axelor.apps.base.db.Wizard">
		<field name="id" hidden="true"/>
	    <break/>
		<button name="mySaleOrderBtn"   title="My sale orders" onClick="wizard-customer-form-open-my-sale-order" css="img-button client-img-menu" icon="img/128px/clientMenuSo_128px.jpg" if-module="axelor-sale" if="__config__.app.isApp('sale')"/>
	    <button name="myInvoicesBtn"   title="My invoices" onClick="wizard-customer-form-open-my-invoices" css="img-button client-img-menu" icon="img/128px/clientMenuInvoice_128px.jpg" if-module="axelor-account" if="__config__.app.isApp('account')"/>
	    <button name="myTicketsBtn"   title="My tickets" onClick="wizard-customer-form-open-my-tickets" css="img-button client-img-menu" icon="img/128px/clientMenuTicket_128px.jpg" if-module="axelor-helpdesk" if="__config__.app.isApp('helpdesk') &amp;&amp; __config__.app.getApp('portal').getManageTickets()"/>
	</form>
	
	<action-view name="wizard-customer-form-open-my-sale-order" title="My sale orders"
		model="com.axelor.apps.sale.db.SaleOrder" icon="img/16px/orderSmall_16px.png">
		<view type="grid" name="sale-order-grid-customer"/>
		<view type="form" name="sale-order-form-customer" />
		<domain>self.customerPartner = :_myPartner</domain>
		<context name="_myPartner" expr="eval:__user__.partner"/>
	</action-view>
	
	<action-view name="wizard-customer-form-open-my-invoices" title="My invoices"
		model="com.axelor.apps.account.db.Invoice" icon="img/16px/invoiceSmall_16px.png">
		<view type="grid" name="invoice-grid"/>
    	<view type="form" name="invoice-customer-form"/>
		<domain>self.partner = :_myPartner</domain>
		<context name="_myPartner" expr="eval:__user__.partner"/>
	</action-view>
	
	<action-view name="wizard-customer-view" title="My space" model="com.axelor.apps.base.db.Wizard">
 		<view type="form" name="wizard-customer-form"/>
 	</action-view>

	<action-view name="wizard-customer-form-open-my-tickets" title="My tickets"
		model="com.axelor.apps.helpdesk.db.Ticket" icon="img/16px/crmSmall_16px.png">
		<view type="grid" name="ticket-grid"/>
		<view type="form" name="ticket-form"/>
		<domain>self.customer = :_myPartner or self.createdBy =:_user</domain>
		<context name="_myPartner" expr="eval:__user__.partner"/>
		<context name="_user" expr="eval:__user__"/>
	</action-view>

</object-views>

